<?xml version="1.0" encoding="utf-8"?>
<s:BorderContainer xmlns:fx="http://ns.adobe.com/mxml/2009" 
		 xmlns:s="library://ns.adobe.com/flex/spark" 
		 xmlns:mx="library://ns.adobe.com/flex/mx" 
		 width="300" height="50" includeInLayout="false"
		 x="{parentDocument.width - this.width + this.getStyle('borderWeight')}" 
		 y="{parentDocument.height - this.height + this.getStyle('borderWeight')}"
		 borderColor="0x494949" borderStyle="solid" 
		 borderWeight="3">
	
	<fx:Script>
		<![CDATA[
			
			[Bindable]
			/**
			 * The label for the button.
			 */
			public var label:String;
		]]>
	</fx:Script>
	
	<s:layout>
		<s:VerticalLayout verticalAlign="middle" horizontalAlign="center" />
	</s:layout>
	
	<s:Label text="{label}" fontSize="24" />
</s:BorderContainer>
